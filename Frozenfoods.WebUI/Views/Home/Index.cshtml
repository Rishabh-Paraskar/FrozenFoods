@model FrozenFoods.Core.ViewModel.ProductListViewModel
@{
    ViewBag.Title = "Home Page";
}
<div style="background-color: white;position: relative;
  text-align: center">
    <img class="img" style="height:460px; width:100%" src="~/Content/uploads/[startbootstrap.com][903]og-image-sb-ui-kit-pro-angular.png">
    <div style="position: absolute;top: 8px; right: 16px">
        <table width="90%" border="0">
            <tr>
                <td>
                    <h1></h1>
                </td>
                <td align="right">
                    @using (Html.BeginForm())
                    {

                        <table>
                            <tr>
                                <td style="">
                                    <input type="text" name="name" class="form-control" placeholder="Search Product" size="40" />
                                </td>
                                <td style="text-align: center;vertical-align:top">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="image" name="fame" src="~/Content/uploads/loupe.png" alt="Submit" width="22" height="30"  /></td>
                            </tr>
                        </table>
                    }
                </td>
            </tr>
        </table>
    </div>

    <div style="position: absolute; top: 100px; left: 100px">
        <h1 style="text-align: center;color: black;font-weight:bold;font-size: 48px;font-family: serif; letter-spacing: 8px;">ShoperStock</h1>
    </div>
    <div style="position: absolute; top: 180px; left: 100px; text-align:center; height:200px; width:45%">
        <p style="text-align: left;color: #423e3e; font-weight:bold;font-size: 28px;font-family: serif; line-height:0.8;">We always deliver more than expected.</p>
        <p style="text-align: left;color: #575454;font-size: 22px;font-family: serif; line-height:1.4;">We see our customers as invited guests to a party, and we are the hosts. It’s our job every day to make every important aspect of the customer experience a little bit better.</p>

        <link href="~/Content/Mybutton.css" rel="stylesheet" />
        @if (User.Identity.IsAuthenticated)
        {
            }
        else
        {

            <div style="position: absolute; top: 130px; left: 0px;">
                <button class="button1"><span>Register </span></button>
            </div>
            <div style="position: absolute; top: 130px; left: 370px;">
                <button class="button1"><span>Login </span></button>
            </div>
        }
    </div>
</div> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   
<div>
    <div><h4 style="text-align: center;color: black; font-size: 24px;font-family: serif">Crafted from our exclusive “vegan” leather, this cruelty-free collection</h4></div>
    <div><h4 style="text-align: center;color: black;font-size: 24px;font-family: serif">is both chic and sustainable. Available in very limited quantities from</h4></div>
    <div><h4 style="text-align: center;color: black;font-size: 24px;font-family: serif">select stockists.</h4></div>&nbsp;&nbsp;&nbsp; 
    <div><h1 style="text-align: center;color: gray;font-size: 38px;font-family: serif; letter-spacing: 3px;">Shop Now <hr style=" border: 1px solid grey;"/></h1></div>

</div>

<div class="col-md-2">
    <h4> Product by category</h4>
    <div class="list-group">
        @Html.ActionLink("All", "Index", null, new { @class = Request["category"] == null ? "list-group-item active" : "list-group-item " })
        @foreach (var cat in Model.ProductCategories)
        {
            @Html.ActionLink(cat.Category, "index", new { category = cat.Category }, new { @class = Request["category"] == cat.Category ? "list-group-item active" : "list-group-item " })
        }
    </div>
</div>

<div class="col-md-10">
    @foreach (var item in Model.Product)
    {

        <div class="col-md-4" style="height:450px; padding:10px;margin:10px;border:solid thin whitesmoke">

            <div class="col-md-12">
                <img class="img" style="height:220px; width:250px" src="~/Content/ProductImages/@item.Image">
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>

            </div>
            <div class="col-md-12">
                <p> @item.Description</p>
            </div>
            <div class="col-md-12">
                <p>&#8377; @item.Price</p>
            </div>
            <div class="col-md-12">
                <a href="@Url.Action("AddToBasket", "Basket", new { id=item.Id })" class="btn btn-default">Add to Basket</a>
            </div>
            <div class="col-md-12">
               <p style="color:green"> @item.Unit left in Stock !!</p>
            </div>
        </div>

    }
</div>


<div class="col-md-12 clearfix" />