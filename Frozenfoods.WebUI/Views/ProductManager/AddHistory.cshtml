@model IEnumerable<FrozenFoods.Core.Models.AddProductHistory>

@{
    ViewBag.Title = "AddHistory";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>History</h2>


<table class="table">
    <tr>
        <th>
           Date  
        </th>

        <th>
            Product Name
        </th>
        <th>
            Added By
        </th>
        <th>
            Added Quantity
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @String.Format("{0:d} at {0:t}", item.CreatedAt)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddedQuantity)
        </td>
        <td>
          
        </td>
    </tr>
}

</table>
