@model FrozenFoods.Core.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Product Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            <label class="col-md-2 control-label">Image</label>
        </dt>

        <dd>
            <img style="height:50px" class="img" src="~/Content/ProductImages/@Model.Image" />
        </dd>

        <dt>
            <label class="col-md-2 control-label">Created&nbsp;At</label>
        </dt>

        <dd>
            @String.Format("{0:d} at {0:t}", Model.CreatedAt)
        </dd>

        <dt>
            <label class="col-md-2 control-label">Name</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <label class="col-md-2 control-label">Description</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            <label class="col-md-2 control-label">Category</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt>
            <label class="col-md-2 control-label">Total&nbsp;Quantity</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalQuantity)
        </dd>

        <dt>
            <label class="col-md-2 control-label">Unit</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Unit)
        </dd>

        <dt>
            <label class="col-md-2 control-label">Price</label>
        </dt>

        <dd>
            &#8377;  @Html.DisplayFor(model => model.Price)
        </dd>


    </dl>
</div>
<p>
   
    @Html.ActionLink("Back to List", "Index")
</p>
