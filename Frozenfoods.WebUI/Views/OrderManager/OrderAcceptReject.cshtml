@model IEnumerable<FrozenFoods.Core.Models.Order>

@{
    ViewBag.Title = "OrderAcceptReject";
}

<h2>Order Accept/Reject</h2>
<P>
   
    @Html.ActionLink("View Accepted Order", "Index", null, new { @class = "btn btn-info" })

</P>
<table class="table">
    <tr>
        <th>
            <label class="col-md-2 control-label">&nbsp;&nbsp;&nbsp;Date</label>
        </th>
        <th>
            <label class="col-md-2 control-label">Order&nbsp;Number</label>
        </th>
        <th>
            <label class="col-md-2 control-label">First&nbsp;Name</label>
        </th>
        <th>
            <label class="col-md-2 control-label">Last&nbsp;Name</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            <label class="col-md-2 control-label">Zip&nbsp;Code</label>
        </th>
        <th>
            <label class="col-md-2 control-label">Order&nbsp;Status</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @String.Format("{0:d} at {0:t}", item.CreatedAt)
    </td>
    <td>
        &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; @Html.DisplayFor(modelItem => item.OrderNumber)
    </td>
    <td>
        &nbsp;&nbsp;&nbsp; @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        &nbsp;&nbsp;&nbsp; @Html.DisplayFor(modelItem => item.SurName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.ZipCode)
    </td>
    <td>
        &nbsp;&nbsp;&nbsp; &nbsp; @Html.DisplayFor(modelItem => item.OrderStatus)
    </td>
    <td>

        @Html.ActionLink("View", "ViewOrder", "OrderManager", new { id = item.Id }, new { @class = "btn btn-info" })


    </td>
    <td> @Html.ActionLink("Accept", "Accept", "OrderManager", new { id = item.Id }, new { @class = "btn btn-success" }) </td>
    <td> @Html.ActionLink("Reject", "Reject", "OrderManager", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
</tr>
}

</table>
