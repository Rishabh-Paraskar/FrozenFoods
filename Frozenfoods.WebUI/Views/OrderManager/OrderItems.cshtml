@model IEnumerable<FrozenFoods.Core.Models.OrderItem>

@{
    ViewBag.Title = "OrderItems";
}

<h2>Order Items</h2>


<table class="table">
    <tr>

        <th>
           
        </th>
        <th>
            <label class="col-md-2 control-label">Product&nbsp;Name</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>Total</th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        <img class="img-thumbnail" style="height:50px;" src="~/Content/ProductImages/@item.Image" />
    </td>

    <td>
        &nbsp;&nbsp;&nbsp; @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>

        &#8377; @Html.DisplayFor(modelItem => item.Price)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        @string.Format("{0:c}", item.Price * item.Quantity)
    </td>
    <td>
    </td>
</tr>
}
    <tr >
        <td colspan="3" style="text-align:right">
           
            <strong>Order Total</strong>
        </td>
        <td>
            @string.Format("{0:c}", (from p in Model select p.Quantity * p.Price).Sum())
        </td>

     </tr>
</table>
