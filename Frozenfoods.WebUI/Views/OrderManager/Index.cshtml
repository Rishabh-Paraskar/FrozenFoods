@model IEnumerable<FrozenFoods.Core.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Orders</h2>


<table class="table" border="0">
    <tr>
        <th>
            <label class="col-md-2 control-label">&nbsp;&nbsp;&nbsp;Date </label>
        </th>

        <th>
            <label class="col-md-2 control-label">Order&nbsp;Number</label>
        </th>
        <th>
            <label class="col-md-2 control-label">First&nbsp;Name</label>
        </th>
        <th>
            <label class="col-md-2 control-label">Last&nbsp;Name</label>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            <label class="col-md-2 control-label">Zip&nbsp;Code</label>
        </th>
        <th>
            <label class="col-md-2 control-label">Order&nbsp;Status</label>
        </th>
        <th>
            <label class="col-md-2 control-label">Remark</label>
        </th>
        <th></th>


    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @String.Format("{0:d} at {0:t}", item.CreatedAt)
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>

            <td>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(modelItem => item.SurName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.ActionLink("Edit", "updateOrder", new { id = item.Id }, new { @class = "btn btn-info" })


            </td>


        </tr>
    }

</table>
