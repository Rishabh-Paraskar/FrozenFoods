@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16" style="background-color:#222;color:white;position:absolute; top:16px; left:-6px">
            <path fill-rule="evenodd" d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
            <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
        </svg>
    </li>
    <li style="text-align: center;font-size: 16px;font-family: serif;">
        @Html.ActionLink("Home", "Index", "Home")
    </li>
    @{
        var name="";
        name = TempData["name"] as string;
        TempData.Keep();
    }
   
    @if (Request.IsAuthenticated && User.Identity.GetUserName()==@name)
    {
       <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bar-chart" viewBox="0 0 16 16" style="background-color:#222;color:white;position:absolute; top:16px; left:-6px">
                <path d="M4 11H2v3h2v-3zm5-4H7v7h2V7zm5-5v12h-2V2h2zm-2-1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1h-2zM6 7a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7zm-5 4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-3z" />
            </svg>
       </li>
        <li style="text-align: center;font-size: 16px;font-family: serif;">@Html.ActionLink("Admin", "Index", "Admin")</li>
    }

<li>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-award-fill" viewBox="0 0 16 16" style="background-color:#222;color:white;position:absolute; top:16px; left:-6px">
        <path d="M8 0l1.669.864 1.858.282.842 1.68 1.337 1.32L13.4 6l.306 1.854-1.337 1.32-.842 1.68-1.858.282L8 12l-1.669-.864-1.858-.282-.842-1.68-1.337-1.32L2.6 6l-.306-1.854 1.337-1.32.842-1.68L6.331.864 8 0z" />
        <path d="M4 11.794V16l4-1 4 1v-4.206l-2.018.306L8 13.126 6.018 12.1 4 11.794z" />
    </svg>
</li>

    <li style="text-align: center;font-size: 16px;font-family: serif;">
        @Html.ActionLink("MY Profile", "MyProfile", "Customer", routeValues: null, htmlAttributes: new { title = "Manage" })

    </li>
    <li>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16" style="background-color:#222;color:white;position:absolute; top:16px; left:-6px">
            <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
        </svg>
    </li>
    <li class="dropdown" style="text-align: center;font-size: 16px;font-family: serif;">
        <a href="#" class="dropdown-toggle"> More<b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li><a href='@Url.Action("index", "Manage")'> Update Password</a></li>
            <li><a href='@Url.Action("About", "Home")'> About</a></li>
            <li><a href='@Url.Action("Contact", "Home")'> Contact</a></li>
            <li><a href='@Url.Action("CustomerOrder", "OrderManager")'> View Orders</a></li>

            <li><a href="@Url.Action("Logout","Account")">Log Out</a></li>
        </ul>
    </li>

    <li style="text-align: center;font-size: 16px;font-family: serif;">
        @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })

    </li>
    <li>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16" style="background-color:#222;color:white;position:absolute; top:16px; left:-6px">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
        </svg>
    </li>
    @*<li style="vertical-align:top">
            <img class="img-circle" style="height:35px; width:35px; vertical-align:top" src="~/Content/uploads/@ViewBag.Image">
        </li>*@
</ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li style="text-align: center;font-size: 16px;font-family: serif;">@Html.ActionLink("Home", "Index", "Home")</li>
    <li style="text-align: center;font-size: 16px;font-family: serif;">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li style="text-align: center;font-size: 16px;font-family: serif;">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
</ul>
}
