@model IEnumerable<FrozenFoods.Core.Models.ProductCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Category List</h2>

<p>
    @Html.ActionLink("Create New", "Create","ProductCategoryManager",null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            <label class="col-md-2 control-label">Is&nbsp;Active</label>
        </th>
        <th>
            <label class="col-md-2 control-label">Created&nbsp;At</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Category)
    </td>
    <td>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  @Html.DisplayFor(modelItem => item.IsActive)
    </td>
    <td>
        @String.Format("{0:d} at {0:t}", item.CreatedAt)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) |

      
    </td>
    <td>  @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
</tr>
    }

</table>
